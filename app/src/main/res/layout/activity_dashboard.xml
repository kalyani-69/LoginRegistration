<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".Activity_Dashboard">
    <TextView
        android:id="@+id/dashboardWelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333" />
    <TextView
        android:id="@+id/totalCows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cows: 0"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/avgMilkProduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg Milk Production: 0L"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/addCowButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Cow" />

    <ListView
        android:id="@+id/cowListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

</LinearLayout>